{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./src/js"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/app/app.ts",
        "./src/typings/angularjs/angular.d.ts",
        "./src/typings/jquery/jquery.d.ts",
        "./src/typings/tsd.d.ts"
    ]
}
